<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">dodge1970</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/db_trachtenverein</property>

        <property name="hibernate.c3p0.acquire_increment">1</property>
        <property name="hibernate.c3p0.idle_test_period">100</property>
        <property name="hibernate.c3p0.max_size">10</property>
        <property name="hibernate.c3p0.max_statements">10</property>
        <property name="hibernate.c3p0.min_size">10</property>
        <property name="hibernate.c3p0.timeout">100</property>
        
        <property name="show_sql">true</property>
        <mapping class="at.htlstp.bejinariu.models.Person" />
        <mapping class="at.htlstp.bejinariu.models.Kleidungsstueck" />
        <mapping class="at.htlstp.bejinariu.models.KleidungsstueckId" />

    </session-factory>
</hibernate-configuration>